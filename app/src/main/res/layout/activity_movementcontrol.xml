<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_movement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movement_list_title" />

    <TextView
        android:id="@+id/misc_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movement_list_title_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >

        <Switch
            android:id="@+id/lock_wheel"
            android:layout_width="104dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:splitTrack="false"
            android:text="@string/movement_text_wheel"
            android:textColor="#008F36" />

        <CheckBox
            android:id="@+id/detect_drop"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="@string/movement_btn_text_detect_drop"
            android:textColor="#008F36" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_movement_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movement_list_title_1" />

    <ListView
        android:id="@+id/movement_list_low"
        android:layout_width="match_parent"
        android:layout_height="98dp" />

    <TextView
        android:id="@+id/text_movement_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movement_list_title_2" />

    <ListView
        android:id="@+id/movement_list_advance"
        android:layout_width="match_parent"
        android:layout_height="284dp" />


</LinearLayout>
